{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "jsx": "react-jsx",

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false, /* Keep this false unless you want type checking in JavaScript files */

    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, /* Enables importing JSON files */

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["server", "client/src"], /* Ensures both frontend and backend are checked */
  "exclude": ["node_modules", "dist", "build"]
}
